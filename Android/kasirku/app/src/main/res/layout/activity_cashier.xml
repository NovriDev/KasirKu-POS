<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_blue"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/payment_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="0"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/v1"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_below="@id/v1"
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/input_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="0"
            android:gravity="center"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#009DFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_below="@id/ll1"
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/choose_customer"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginEnd="30dp"
                android:text="Pelanggan : Umum"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="12sp"
                android:textColor="#009DFF"
                android:background="@drawable/rounded_square_2"/>

            <Button
                android:id="@+id/discount"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Diskon : 0%"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="12sp"
                android:textColor="#009DFF"
                android:background="@drawable/rounded_square_2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/choose_method"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Metode : Tunai"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="12sp"
                android:textColor="#009DFF"
                android:background="@drawable/rounded_square_2"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/ll2"
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num_7"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:padding="2dp"
                android:text="7"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="40sp"
                android:textColor="#009DFF"
                android:elevation="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_square_2"/>

            <Button
                android:id="@+id/num_8"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:text="8"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="40sp"
                android:textColor="#009DFF"
                android:layout_marginEnd="20dp"
                android:elevation="5dp"
                android:background="@drawable/rounded_square_2"/>

            <Button
                android:id="@+id/num_9"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:text="9"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="40sp"
                android:textColor="#009DFF"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_square_2"/>

            <Button
                android:id="@+id/clear_input"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:text="C"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="40sp"
                android:textColor="#009DFF"
                android:background="@drawable/rounded_square_2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num_4"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:padding="2dp"
                android:text="4"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="40sp"
                android:textColor="#009DFF"
                android:elevation="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_square_2"/>

            <Button
                android:id="@+id/num_5"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:text="5"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="40sp"
                android:textColor="#009DFF"
                android:layout_marginEnd="20dp"
                android:elevation="5dp"
                android:background="@drawable/rounded_square_2"/>

            <Button
                android:id="@+id/num_6"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:text="6"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="40sp"
                android:textColor="#009DFF"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_square_2"/>

            <ImageButton
                android:id="@+id/back_space"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_backspace"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="40sp"
                android:textColor="#009DFF"
                android:background="@drawable/rounded_square_2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num_1"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:padding="2dp"
                android:text="1"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="40sp"
                android:textColor="#009DFF"
                android:elevation="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_square_2"/>

            <Button
                android:id="@+id/num_2"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:text="2"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="40sp"
                android:textColor="#009DFF"
                android:layout_marginEnd="20dp"
                android:elevation="5dp"
                android:background="@drawable/rounded_square_2"/>

            <Button
                android:id="@+id/num_3"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:text="3"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="40sp"
                android:textColor="#009DFF"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_square_2"/>

            <ImageButton
                android:id="@+id/submit"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_check"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="40sp"
                android:background="@drawable/rounded_square_2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginStart="33dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num_0"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:padding="2dp"
                android:text="0"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="40sp"
                android:textColor="#009DFF"
                android:elevation="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_square_2"/>

            <Button
                android:id="@+id/num_00"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:text="00"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="40sp"
                android:textColor="#009DFF"
                android:layout_marginEnd="20dp"
                android:elevation="5dp"
                android:background="@drawable/rounded_square_2"/>

            <Button
                android:id="@+id/num_000"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="000"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="40sp"
                android:textColor="#009DFF"
                android:layout_marginEnd="12dp"
                android:background="@drawable/rounded_square_2"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>